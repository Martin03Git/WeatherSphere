  <script>
    // get current time
    function clock() {
      const day = new Date();
      let hour = day.getHours();
      let minute = day.getMinutes();
      let second = day.getSeconds();
      document.getElementById("clock").innerHTML = (hour < 10 ? "0" + hour : hour) + " : " + (minute < 10 ? "0" + minute : minute) + " : " + (second < 10 ? "0" + second : second);
    };

  </script>
